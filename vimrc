
set number
set ruler
set tabstop=4
set shiftwidth=4
set autoindent
set hlsearch
set cursorline
hi Cursorline cterm=NONE ctermbg=LightGrey
hi linenr cterm=NONE ctermbg=LightGrey
nnoremap <C-Left> 	:tabprevious<CR>
nnoremap <C-Right>	:tabnext<CR>
nnoremap <C-u>		:u<CR>
"hi Normal ctermfg=grey ctermbg=black
"colorscheme delek
"colorscheme desert

