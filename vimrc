
set number
set ruler
set tabstop=4
set shiftwidth=4
set autoindent
set hlsearch
"hi Normal ctermfg=grey ctermbg=black
"colorscheme delek
"colorscheme desert

set cursorline
hi Cursorline cterm=NONE ctermbg=lightblue

nnoremap <C-Left> 	:tabprevious<CR>
nnoremap <C-Right>	:tabnext<CR>

nnoremap <C-u>		:u<CR>


